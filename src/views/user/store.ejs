<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>
    <%= t('home.title') %>
  </title>
  <link rel="stylesheet" href="/stylesheets/bootstrap.css" />
  <link rel="stylesheet" href="/stylesheets/style.css" />
  <link rel="icon" href="/images/kfc-logo.jpg" type="image/jpeg">
</head>

<body>
  <%- include('../layouts/users/header') -%>
    <div class="container mt-4">
      <div class="row g-4 mb-4">
        <% stores.forEach((store)=> { %>
          <div class="col-md-3">
            <div class="card h-100 overflow-hidden">
              <div class="card-body">
                <h5 class="card-title primary-text">
                  <%= store.name %>
                </h5>
                <p class="card-text">
                  <strong><%=t('store.search.address')%>:</strong> <%= store.address %>
                </p>
                <p class="card-text">
                  <strong><%=t('store.search.phoneNumber')%>:</strong> <%= store.phoneNumber %>
                </p>
              </div>
            </div>
          </div>
          <% }) %>
      </div>
    </div>
</body>
<script src="/scripts/jquery.min.js"></script>
<script src="/scripts/bootstrap.bundle.min.js"></script>
<script src="/scripts/slim.min.js"></script>
<script src="/scripts/header.js"></script>

</html>
